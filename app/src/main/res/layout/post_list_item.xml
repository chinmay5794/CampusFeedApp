<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.campusfeedapp.campusfeed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_weight="1"
        android:minHeight="190dp"
        android:id="@+id/main_image_layout_post">

        <ImageView
            android:id="@+id/list_item_google_cards_travel_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_main_image"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="right"
        android:background="@drawable/google_cards_background_bottom"
        android:orientation="vertical" >

        <com.campusfeedapp.campusfeed.CustomViews.RobotoTextView
            android:id="@+id/list_item_created_time_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Eat at Joe"
            android:textColor="@color/material_blue_grey_300"
            android:textSize="16sp"
            android:gravity="right"
            app:typeface="robotoRegular" />

        <com.campusfeedapp.campusfeed.CustomViews.RobotoTextView
            android:id="@+id/list_item_google_cards_travel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:text="@string/lorem_ipsum_long"
            android:textColor="@color/material_blue_grey_700"
            android:textSize="16sp"
            app:typeface="robotoRegular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <com.campusfeedapp.campusfeed.CustomViews.RobotoTextView
                android:id="@+id/list_item_views_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="SHARE"
                android:textColor="@color/material_blue_grey_300"
                android:textSize="14sp"
                app:typeface="robotoMedium" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>