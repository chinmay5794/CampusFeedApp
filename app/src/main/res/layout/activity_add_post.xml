<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.campusfeedapp.campusfeed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_grey_300"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_travel_transparent_background"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="22dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/llt_addapost_form">

            <com.campusfeedapp.campusfeed.CustomViews.RobotoTextView
                android:id="@+id/top_label_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@drawable/transparent_button_selector"
                android:gravity="right"
                android:text="ADD POST"
                android:textColor="@color/main_color_grey_700"
                android:textSize="34sp"
                app:typeface="robotoThin" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/et_post_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="top|left"
                    android:lines="4"
                    android:maxLines="7"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/textinputborder"
                    android:hint="Enter body of the post here"
                    android:textColorHint="@color/main_color_grey_300"
                    android:paddingLeft="10dp">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/upload_imgview_addpost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/default_img"/>

                <com.campusfeedapp.campusfeed.CustomViews.RobotoTextView
                    android:id="@+id/upload_btn_addpost"
                    style="@style/ButtonStyle.RaisedEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/transparent_button_selector"
                    android:minWidth="96dp"
                    android:text="Upload picture (optional)"
                    android:textColor="@color/main_color_grey_700"
                    app:typeface="robotoMedium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="12dp"
                android:gravity="right">

                <com.campusfeedapp.campusfeed.CustomViews.RobotoTextView
                    android:id="@+id/submit_btn_addpost"
                    style="@style/ButtonStyle.RaisedEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/transparent_button_selector"
                    android:minWidth="96dp"
                    android:text="ADD POST"
                    android:textColor="@color/main_color_grey_700"
                    app:typeface="robotoMedium"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>