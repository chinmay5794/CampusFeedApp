<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">robotoRegular</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <!-- Supports API Level 17+ -->
        <!-- <item name="android:paddingStart">26dp</item> -->
        <!-- Supports API Level 17+ -->
        <!-- <item name="android:paddingEnd">26dp</item> -->
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/cd_main_image</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <!-- <item name="android:paddingBottom">8dp</item> -->
        <item name="android:paddingRight">4dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="TextViewAppearance.Caption1" parent="@style/TextViewAppearance">
        <item name="typeface">robotoRegular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <style name="TextViewAppearance.Title1" parent="@style/TextViewAppearance">
        <item name="typeface">robotoMedium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <!-- Button related styles -->
    <style name="ButtonStyle" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">9dp</item>
        <item name="typeface">robotoMedium</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonStyle.RaisedEmpty" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/selector_background_empty</item>
        <item name="android:textColor">@drawable/selector_text_empty</item>
    </style>

    <style name="ButtonStyle.RaisedFull" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/selector_background_full</item>
        <item name="android:textColor">@drawable/selector_text_full</item>
    </style>
    <!-- Button related styles end here -->


</resources>
